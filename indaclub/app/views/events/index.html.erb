

<h1>Listing Events</h1>
<div class="search">
<%= search_form_for @q do |f| %>
<%= f.text_field :name_cont, :placeholder => "Search" %>
<div class="actions"><%= f.submit "Search" %></div>
<% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Ticketlink</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%= render @events %>
  </tbody>
</table>

<br>



<%= link_to 'New Event', new_event_path %>
