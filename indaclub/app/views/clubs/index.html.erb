<div class="row">
  <div class="large-12 columns">
    <img id="cover-image" src="http://www.residentadvisor.net/photos/2012/es120528circol/dc_7.jpg"><br><br>
  </div>
</div>


<p id="notice"><%= notice %></p>
<div class="search">
<%= search_form_for @q do |f| %>
<%= f.text_field :name_cont, :placeholder => "Search" %>
<div class="actions"><%= f.submit "Search" %></div>
<% end %>
</div>

<h1>Listing Clubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%= render @clubs %>
  </tbody>
</table>

<br>

<%= link_to 'New Club', new_club_path %>
